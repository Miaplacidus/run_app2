<h1>Listing challenges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Post</th>
      <th>State</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.name %></td>
        <td><%= challenge.sender_id %></td>
        <td><%= challenge.recipient_id %></td>
        <td><%= challenge.post_id %></td>
        <td><%= challenge.state %></td>
        <td><%= challenge.notes %></td>
        <td><%= link_to 'Show', challenge %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challenge', new_challenge_path %>
